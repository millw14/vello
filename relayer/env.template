# Velo Relayer Configuration
# Copy this to .env and fill in your values

# Solana RPC URL
SOLANA_RPC_URL=https://api.devnet.solana.com

# Path to relayer keypair file
RELAYER_KEYPAIR_PATH=./relayer-keypair.json

# Fee configuration
MIN_FEE=10000
MAX_FEE=100000000
FEE_PERCENT=0.5

# Program IDs (update after deployment)
MIXER_PROGRAM_ID=VeLoMix1111111111111111111111111111111111111
PRIVATE_TX_PROGRAM_ID=VeLoPTx1111111111111111111111111111111111111
STEALTH_PROGRAM_ID=VeLoStH1111111111111111111111111111111111111

# Server
PORT=3001
NODE_ENV=development
LOG_LEVEL=info

# Redis (optional, for production queueing)
REDIS_URL=redis://localhost:6379
